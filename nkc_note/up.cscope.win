#!/bin/bash
PROPATH=`pwd`

crt_csfile(){
	if [ -d csfile ]
	then
		rm -rf csfile
	fi
	mkdir csfile
	find `pwd` -name "*.c" -o -name "*.s" -o -name "*.h" -o -name "*.asm" -o -name "*.cpp" -o -name "*.hal"  > csfile/cscope.files
	cscope -bkqR 
	ctags -R .
	return 0
}

cd $PROPATH
crt_csfile
mv cscope* csfile/
